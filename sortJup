
def sortArr(a):
    hCount = findHead(a)
    tCount = findTail(a)

    for i in range(len(a)):
        if (a[i] == 0):
            if (i > hCount):
                a = swap(a, i, hCount)
        elif (a[i] == 2):
            if (i < tCount):
                a = swap(a, i, tCount)
                # Special case when you swapped 0 and 2
                if ( a[i] == 0):
                    a = swap(a, i, hCount)
        hCount = findHead(a)    
        tCount = findTail(a)
    print(a)
    
# Dont judge me on swap implementation
def swap(a, pos1, pos2):
    t = a[pos1]
    a[pos1] = a[pos2]
    a[pos2] = t
    return a

def findHead(a):
    hCount = 0
    while (a[hCount] == 0):
        hCount += 1
    # head = a[hCount]
    return hCount

def findTail(a):
    tCount = len(a) - 1
    while(a[tCount] == 2):
        tCount = tCount - 1
    # tail = a[tCount]
    return tCount

a = [0,1,0,1,2,1,2,0,0,2,1,2,1,2,0,1,2,0,2]
sortArr(a)
